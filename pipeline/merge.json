{
	"name": "merge",
	"properties": {
		"activities": [
			{
				"name": "Copy Data1",
				"type": "Copy",
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"typeProperties": {
					"source": {
						"type": "AzureBlobFSSource",
						"recursive": true,
						"maxConcurrentConnections": 10
					},
					"sink": {
						"type": "AzureBlobFSSink",
						"copyBehavior": "MergeFiles",
						"maxConcurrentConnections": 10
					},
					"enableStaging": false
				},
				"inputs": [
					{
						"referenceName": "dsrawsample",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "dstempsample",
						"type": "DatasetReference"
					}
				]
			}
		],
		"folder": {
			"name": "dataprep"
		}
	}
}